INCLUDES = 
OPTIONS = QUIT_ON_FAILURE

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))

ifdef POLY
HOLHEAP = heap
OBJNAMES = pairTheory relationTheory pred_setTheory listTheory
DEPS = $(patsubst %,$(dprot $(SIGOBJ)/%.uo),$(OBJNAMES))

all: $(HOLHEAP)

$(HOLHEAP): $(DEPS) $(dprot $(HOLDIR)/bin/hol.state0)
	$(protect $(HOLDIR)/bin/buildheap) -o $@ $(OBJNAMES)
endif

all: $(TARGETS) munge.exe

munge.exe: CCSTheory.sig StrongEQTheory.sig StrongLawsTheory.sig WeakEQTheory.sig ObsCongrTheory.sig
	$(HOLDIR)/bin/mkmunge.exe CCSTheory StrongEQTheory StrongLawsTheory \
		WeakEQTheory ObsCongrTheory

#ifeq ($(KERNELID),otknl)
#all: $(patsubst %Script.sml,%.ot.art,$(wildcard *Script.sml))
#endif

.PHONY: all
