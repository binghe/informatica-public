OPTIONS = QUIT_ON_FAILURE
# CLINE_OPTIONS = -j1

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))
EXTRA_CLEANS = heap munge.exe selftest.exe \
	$(patsubst %Theory.uo,%Theory.html,$(TARGETS)) \
	$(patsubst %Theory.uo,%Theory.lst,$(TARGETS))

ifdef POLY
HOLHEAP = heap
OBJNAMES = pairTheory sumTheory pred_setTheory listTheory \
	arithmeticTheory prim_recTheory optionTheory \
	realTheory testutils
OBJS = $(patsubst %,$(dprot $(SIGOBJ)/%.uo),$(OBJNAMES))

all: $(HOLHEAP)

$(HOLHEAP): $(OBJS) $(dprot $(HOLDIR)/bin/hol.state0)
	$(protect $(HOLDIR)/bin/buildheap) -o $@ $(OBJNAMES)
endif

all: $(TARGETS) munge.exe

MUNGER = $(HOLDIR)/bin/mkmunge.exe

munge.exe: CCSTheory.sig StrongEQTheory.sig StrongLawsTheory.sig \
	   WeakEQTheory.sig WeakLawsTheory.sig ObsCongrTheory.sig ObsCongrLawsTheory.sig \
	   CongruenceTheory.sig TraceTheory.sig CoarsestCongrTheory.sig \
	   BisimulationUptoTheory.sig ExpansionTheory.sig ContractionTheory.sig \
	   UniqueSolutionsTheory.sig ExampleTheory.sig
	$(protect $(MUNGER)) -o $@ CCSTheory StrongEQTheory StrongLawsTheory \
	   WeakEQTheory WeakLawsTheory ObsCongrTheory ObsCongrLawsTheory \
	   CongruenceTheory TraceTheory CoarsestCongrTheory \
	   BisimulationUptoTheory ExpansionTheory ContractionTheory \
	   UniqueSolutionsTheory ExampleTheory

output: munge.exe
	echo '\HOLtm{R1 RUNION R2}' | ./munge.exe

